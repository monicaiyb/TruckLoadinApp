@model TruckLoadinApp.ViewModels.AccountViewModel

@{
    ViewBag.Title = "Users";
    Layout = "_Layout";
    var itemNo = 1;
}

@* <h3>@ViewData["Title"]</h3> *@

@if (!string.IsNullOrEmpty(Model?.ErrorMessage))
{
    <div class=" col-sm-6 no-padding">
        <div class="alert alert-danger alert-dismissible">
            <b>Error</b>
            <div class="row">
                <div class="col-sm-9">
                    @Model.ErrorMessage
                </div>
                <div class="col-sm-3">
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
}
@if (!string.IsNullOrEmpty(@Model?.SuccessMessage))
{
    <div class=" col-sm-6 no-padding">
        <div class="alert alert-success alert-dismissible">
            <b>Success</b>
            <div class="row">
                <div class="col-sm-9">
                    @Model.SuccessMessage
                </div>
                <div class="col-sm-3">
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
}

<div class="display-inline margin-bottom-10 pull-right">
    <a asp-action="Create" class="btn btn-info"
       title="Click to create new event type">
        <i class="glyphicon glyphicon-plus"></i>
        New Users
    </a>

</div>

<div class="clear-fix"></div>

<div class="row margin-bottom-10">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                <form asp-action="Index" method="get" class="form-control-sm">
                    <div class="row">
                        <div class="col-sm-3">
                            <div class="display-inline">
                                <div>
                                    <label>User</label>
                                </div>
                               
                            </div>
                        </div>
                        <div class="col-sm-5">
                            <div class="display-inline">
                                <div>
                                    <label>Search Term</label>
                                </div>
                                <div>
                                    <input type="text" asp-for="SearchTerm" maxlength="30" class="search-box form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="display-inline filter-buttons">
                                <div><label></label></div>
                                <div>
                                    <input type="submit" class="btn btn-primary" value="Search" />
                                    @(" | ")
                                    <a asp-action="Index" class="btn btn-info">Clear</a>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="clearfix"></div>
                </form>
            </div>
        </div>
    </div>
</div>

@if (Model.Users.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-header-fixed" id="testtable" style="border-collapse: collapse;font-family:Arial">
            <thead>
            <tr>
                <th>#</th>
        
                <th>First Name</th>
                <th>Last Mae</th>
                <th>Email</th>

                <th class="text-center">Options</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Users)
            {
                <tr>
                @*     <td>@(itemNo++).</td> *@
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Email</td>
                   
                    <td class="text-center">
                  
                        <a href="@Url.Action("Details",new{item.Id })"><i class="glyphicon glyphicon-edit" title="Click to edit event category"></i> Edit</a>
                        @(" | ")
                        <a href="javascript:void(0)" onclick="confirmDelete(@item.Id)"><i class="glyphicon glyphicon-remove text-danger"></i> Delete</a>

                    
                    </td>
                
                </tr>
            }
            </tbody>
        </table>
    </div>
    <div class="clearfix"></div>
}

<form id="reload-form" method="get" asp-action="Index">
    <input type="hidden" name="SuccessMessage" value="Successfully Deleted Record!" />
</form>

@section Scripts {
    <script type="text/javascript">
        function confirmDelete(id, itemno) {
            if (confirm("Are you sure you want to delete this user?")) {
                // If user confirms, call the delete action
                $.ajax({
                    type: "POST",
                    url: "/Account/_Delete", // Specify your controller and action
                    data: { id: id }, // Pass necessary data
                    success: function (response) {
                        if (response.success) {
                            // Handle success, e.g., reload page or update UI
                            $("#reload-form").submit();
                        } else {
                            // Handle failure
                            alert("Failed to delete item.");
                        }
                    },
                    error: function () {
                        // Handle error
                        alert("An error occurred while deleting the item.");
                    }
                });
            }
        }
    </script>
}